{
  "version": "2.0.0",
  "presentation": {
    "echo": true,
    "reveal": "always",
    "focus": true,
    "panel": "shared",
    "showReuseMessage": true,
    "clear": true
  },
  "tasks": [
    {
      "type": "shell",
      "group": "build",
      "label": "Go generate",
      "command": "go generate ./...",
      "problemMatcher": ["$go"]
    },
    {
      "type": "shell",
      "group": "test",
      "label": "Go test",
      "command": "go test ./...",
      "problemMatcher": ["$go"]
    }
  ]
}
